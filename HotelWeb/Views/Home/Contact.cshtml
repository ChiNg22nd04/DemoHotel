    background-color: var(--btnMainColor);
    border-color: #1861ac;
    padding: 10px 25px;
    border-radius: 5px;
    margin-left: 20px;
    border: 1px solid var(--btnMainColor);
}

    li.btnMain:hover {
        opacity: 0.9;
        border: 1px solid var(--btnMainColor);
    }

.btnOutline {
    background-color: var(--bg-white);
    border-color: #1861ac;
    padding: 10px 25px;
    border-radius: 5px;
    margin-left: 10px;
