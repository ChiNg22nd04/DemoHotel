    padding: 10px 20px;
    margin: 3px 0;
    color: var(--colorTextNature);


}



li.navbar-item:hover {
    background-color: var(--bg-white);
    flex: 1 1 auto;
    position: relative;
    border-radius: 6px;
    overflow: hidden;
    transition: background-color 100ms linear;
