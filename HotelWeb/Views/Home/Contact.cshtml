@{
    ViewBag.Title = "Contact";
    <link rel="stylesheet" href="~/Content/Stylesheet/stylesheet.css" asp-append-version="true" />
}


<div class="container body grid">
    <div class="row gx-2 flex-1">
        @Html.Partial("_PartialSideBar")
