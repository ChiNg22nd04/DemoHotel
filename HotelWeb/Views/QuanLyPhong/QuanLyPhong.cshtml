<style>
    /* Filter Bar */
    .filter-bar {
        display: flex;
        gap: 10px;
        margin: 45px 0 20px 85px;
    }

    .filter-select {
        padding: 5px;
    }

    /* Room */
    .room-container {
        margin-top: 20px;
    }

    .room-category {
        margin-bottom: 20px;
    }

    .room-cards-container {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
    }

    .room-card {
        height: 200px;
        width: 200px;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        box-sizing: border-box;
        transition: transform 0.2s;
    }

        .room-card:hover {
            transform: scale(1.05);
        }

    .room-top-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .icon {
        vertical-align: middle;
        margin-right: 5px;
        width: 24px;
        height: 24px;
    }

    .room-middle {
        text-align: center;
        margin-top: auto;
    }

    .room-bottom {
        text-align: center;
    }

    .room-available {
        background-color: #70d692;
        color: white;
    }

    .room-booked {
        background-color: #909090;
        color: white;
    }

    .room-occupied {
        background-color: #8ab6cd;
        color: white;
    }

    .room-id, .room-status, .room-customer, .room-cleaning-status {
        margin: 5px 0;
    }
</style>
